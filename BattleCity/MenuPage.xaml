<Page
    x:Class="BattleCity.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BattleCity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/Menu_background2.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="680" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="680" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image Source="Assets/Menubox1.png" Grid.Column="1" Grid.Row="1" />
        <Image Source="Assets/Logo2.png" Grid.Column="1" Grid.Row="1" 
               Width="300"
               Height="250"
               Margin="250,-300,0,0"
               />
        <!--Character selection elements in this stackpanel-->
        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            Margin="80,80,0,0"
            >

            <TextBox 
                x:Name="P1NameTextBox"
                 Grid.Column="1"
                 FontSize="20"
                 HorizontalAlignment="Left"
                 TextWrapping="Wrap"
                Margin="0,40,0,0"
                 VerticalAlignment="Top"
                Text=""
                 PlaceholderText="Insert Player 1 name"
                 Height="40"
                 Width="200"
                 MaxLength="8"
                 />
            <TextBlock
                x:Name="P1ColourTextBlock"
                   HorizontalAlignment="Left"
                   FontSize="18" 
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"
                   Text="Selected colour: White"
                   TextAlignment="Center"
                   VerticalAlignment="Top"
                   Height="40"
                   Width="200" Foreground="White"
                   />
            <Button x:Name="P1WhiteCatImage"
               HorizontalAlignment="Left"
               Height="55"
               Margin="40,15,0,0"
               VerticalAlignment="Top"
               Width="35" Click="P1WhiteCatImage_Click"
               >
                <Button.Background>
                    <ImageBrush Stretch="None" ImageSource="Assets/Cat_placeholder.png">
                        <ImageBrush.Transform>
                            <CompositeTransform TranslateY="56"/>
                        </ImageBrush.Transform>
                    </ImageBrush>
                </Button.Background>
            </Button>

            <Button 
                x:Name="P1PinkCatImage"
        	    Grid.Column="1"
        	    HorizontalAlignment="Left"
        	    Height="55"
                Margin="120,-55,0,0"
        	    VerticalAlignment="Top"
        	    Width="35" 
                Click="P1PinkCatImage_Click"
                >
                <Button.Background>
                    <ImageBrush Stretch="None" ImageSource="Assets/Cat_placeholder.png"/>
                </Button.Background>
            </Button>

            <Button 
              x:Name="MultiPlayer" 
        	Click="MultiPlayer_Click" 
        	VerticalAlignment="Center"
        	HorizontalAlignment="Left"
        	Grid.Column="1"
        	Width="200"
        	Height="40" FontSize="24" FontFamily="Impact" Foreground="#FF111111"
        	Content="Player 2 Join" Margin="0,80,0,0"
                >
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Button.png"/>
                </Button.Background>
            </Button>

            <TextBox x:Name="P2NameTextBox"
        	Grid.Column="1"
        	FontSize="20"
        	HorizontalAlignment="Left"
        	Margin="0,80,0,0"
        	TextWrapping="Wrap"
        	Text=""
        	VerticalAlignment="Top"
        	PlaceholderText="Insert Player 2 name"
        	Height="40"
        	Width="200"
            Visibility="Collapsed"
                 MaxLength="8"
            />
            <TextBlock
            x:Name="P2ColourTextBlock"
        	HorizontalAlignment="Left"
        	Margin="0,10,0,0"
        	FontSize="18" 
        	TextWrapping="Wrap"
        	Text="Selected colour: Pink"
        	TextAlignment="Center"
        	VerticalAlignment="Top"
                   Visibility="Collapsed"
        	Height="40"
        	Width="200" Foreground="White"
                   />

            <Button x:Name="P2WhiteCatImage"
        	Grid.Column="1"
        	HorizontalAlignment="Left"
        	Height="55"
        	Margin="40,15,0,0"
        	VerticalAlignment="Top"
        	Width="35"
            Visibility="Collapsed" Click="P2WhiteCatImage_Click"
               >
                <Button.Background>
                    <ImageBrush Stretch="None" ImageSource="Assets/Cat_placeholder.png">
                        <ImageBrush.Transform>
                            <CompositeTransform TranslateY="56"/>
                        </ImageBrush.Transform>
                    </ImageBrush>
                </Button.Background>
            </Button>

            <Button x:Name="P2PinkCatImage"
        	Grid.Column="1"
        	HorizontalAlignment="Left"
        	Height="55"
        	Margin="120,-55,0,0"
        	VerticalAlignment="Top"
        	Width="35"
               Visibility="Collapsed" Click="P2PinkCatImage_Click"
            >
                <Button.Background>
                    <ImageBrush Stretch="None" ImageSource="Assets/Cat_placeholder.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <!--PLAY AND BACK BUTTON elements in this stackpanel-->
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom">

            <Button x:Name="PlayButton" 
                Click="PlayButton_Click" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200"
                Height="60" FontSize="29.333" FontFamily="Impact" Foreground="#FF111111"
                Content="Play" Margin="320,0,0,20"
                >
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Button.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="BackMenuButton" 
                Click="BackMenuButton_Click" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200"
                Height="60" FontSize="29.333" FontFamily="Impact" Foreground="#FF111111"
                Content="Back" Margin="320,0,0,80"
                >
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Button.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <!--This stackpanel is for the level selection elements-->
        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            Margin="320,60,0,0"
            Width="200"
            Height="100"
            >
            <TextBlock    
                VerticalAlignment="Top"
        	    HorizontalAlignment="Center"
        	    FontSize="25" FontFamily="Impact"
        	    TextWrapping="Wrap"
        	    Text="Choose Level"
        	    TextAlignment="Center"
        	    Height="40"
        	    Width="200"
                   />

            <Button 
                x:Name="LevelDownButton"
                HorizontalAlignment="Left"
                FontSize="20" FontFamily="Impact"
                Margin="0,0,160,0"
                VerticalAlignment="Top"
                Width="40" Content="&lt;" Height="40" Click="LevelDownButton_Click">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Button.png"/>
                </Button.Background>
            </Button>

            <Button 
                x:Name="LevelUpButton"
                HorizontalAlignment="Right"
                FontSize="20" FontFamily="Impact"
                Margin="0,-40,0,0"
                VerticalAlignment="Top"
                Width="40" Height="40" Content="&gt;" Click="LevelUpButton_Click">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Button.png"/>
                </Button.Background>
            </Button>

            <TextBlock x:Name="LevelNumberTextBlock"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,-32,0,0"
                   TextWrapping="Wrap"
                   Text="1"
                   VerticalAlignment="Top"
                   Height="21"
                   Width="100"
                   FontFamily="Impact" FontSize="20"
                   />
        </StackPanel>
    </Grid>
</Page>
